# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.{rb,rake}]
indent_size = 2

[*.{js,es6,jsx}]
indent_size = 4

[*.go]
indent_size = 4
